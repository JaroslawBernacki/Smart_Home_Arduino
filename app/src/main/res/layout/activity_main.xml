<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <Button
        android:id="@+id/btnConnect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Połącz z urządzeniem" />

    <Button
        android:id="@+id/btnImg1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Obraz 1"
        android:enabled="false" />
    <Button
        android:id="@+id/btnImg2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Obraz 2"
        android:enabled="false" />
    <Button
        android:id="@+id/btnImg3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Obraz 3"
        android:enabled="false" />
    <Button
        android:id="@+id/btnImg4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Obraz 4"
        android:enabled="false" />
    <EditText
        android:id="@+id/editTextMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Wpisz notatke"
        android:inputType="text" />
    <Button
        android:id="@+id/btnImg5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Przeslij"
        android:enabled="false" />
</LinearLayout>
